@{
    ViewData["Title"] = "Expo Demo";
    Layout = null; // Standalone landing page
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Aviation Obstacle Registration</title>

    <!-- Leaflet CSS for the map -->
    <link rel="stylesheet" href="~/lib/leaflet/leaflet.css" />

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <style @Html.Raw(Html.NonceAttribute())>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body, html {
            height: 100%;
            overflow: hidden;
        }

        /* Full-screen map background */
        #landing-map {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1;
        }

        /* Overlay for role selection */
        .role-selection-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.65);
            z-index: 2;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        /* Role selection container */
        .role-selection-container {
            display: flex;
            gap: 40px;
            max-width: 1200px;
            width: 100%;
            justify-content: center;
            flex-wrap: wrap;
        }

        /* Individual role box */
        .role-box {
            background: white;
            border-radius: 24px;
            padding: 50px 40px;
            width: 100%;
            max-width: 450px;
            text-align: center;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            cursor: pointer;
            text-decoration: none;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .role-box:hover {
            transform: translateY(-10px);
            box-shadow: 0 30px 80px rgba(0, 0, 0, 0.5);
        }

        .role-box.pilot {
            background: linear-gradient(135deg, rgba(139, 92, 246, 0.1) 0%, rgba(79, 70, 229, 0.1) 100%);
            border: 3px solid #8b5cf6;
        }

        .role-box.registerforer {
            background: linear-gradient(135deg, rgba(16, 185, 129, 0.1) 0%, rgba(5, 150, 105, 0.1) 100%);
            border: 3px solid #10b981;
        }

        .role-icon {
            font-size: 72px;
            margin-bottom: 20px;
        }

        .role-title {
            font-size: 32px;
            font-weight: 700;
            margin-bottom: 15px;
            color: #1f2937;
        }

        .role-box.pilot .role-title {
            color: #7c3aed;
        }

        .role-box.registerforer .role-title {
            color: #059669;
        }

        .role-description {
            font-size: 16px;
            color: #6b7280;
            margin-bottom: 30px;
            line-height: 1.6;
        }

        .role-button {
            padding: 16px 40px;
            border-radius: 12px;
            font-size: 18px;
            font-weight: 600;
            color: white;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
        }

        .role-box.pilot .role-button {
            background: linear-gradient(135deg, #8b5cf6 0%, #6d28d9 100%);
            box-shadow: 0 4px 12px rgba(139, 92, 246, 0.4);
        }

        .role-box.pilot .role-button:hover {
            background: linear-gradient(135deg, #7c3aed 0%, #5b21b6 100%);
            box-shadow: 0 6px 16px rgba(139, 92, 246, 0.5);
        }

        .role-box.registerforer .role-button {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.4);
        }

        .role-box.registerforer .role-button:hover {
            background: linear-gradient(135deg, #059669 0%, #047857 100%);
            box-shadow: 0 6px 16px rgba(16, 185, 129, 0.5);
        }

        /* Header branding */
        .header-branding {
            position: absolute;
            top: 30px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 3;
            text-align: center;
        }

        .header-title {
            font-size: 36px;
            font-weight: 800;
            color: white;
            margin-bottom: 8px;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
        }

        .header-subtitle {
            font-size: 16px;
            color: rgba(255, 255, 255, 0.95);
            text-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
        }

        /* Responsive design */
        @@media (max-width: 768px) {
            .role-selection-container {
                flex-direction: column;
                gap: 20px;
            }

            .role-box {
                max-width: 100%;
                padding: 40px 30px;
            }

            .role-icon {
                font-size: 56px;
            }

            .role-title {
                font-size: 26px;
            }

            .role-description {
                font-size: 14px;
            }

            .header-title {
                font-size: 28px;
            }

            .header-subtitle {
                font-size: 14px;
            }
        }
    </style>
</head>
<body>
    <!-- Full-screen map background -->
    <div id="landing-map"></div>

    <!-- Header branding -->
    <div class="header-branding">
        <h1 class="header-title">Expo Demo - Velg din rolle</h1>
        <p class="header-subtitle">Test systemet som Pilot eller Registerf√∏rer</p>
    </div>

    <!-- Role selection overlay -->
    <div class="role-selection-overlay">
        <div class="role-selection-container">
            <!-- Pilot Role Box -->
            <a href="@Url.Action("ExpoDemo", "Pilot", new { role = "pilot" })" class="role-box pilot">
                <div class="role-icon">‚úàÔ∏è</div>
                <h2 class="role-title">Test som Pilot</h2>
                <p class="role-description">
                    Opplev hvordan piloter registrerer luftfartshindringer med Quick Register og Full Register.
                </p>
                <button class="role-button">Start Pilot Test</button>
            </a>

            <!-- Registerf√∏rer Role Box -->
            <a href="@Url.Action("ExpoDemo", "Registerforer", new { role = "registerforer" })" class="role-box registerforer">
                <div class="role-icon">üìã</div>
                <h2 class="role-title">Test som Registerf√∏rer</h2>
                <p class="role-description">
                    Se hvordan Registerf√∏rere behandler, godkjenner og administrerer innsendte hindringer.
                </p>
                <button class="role-button">Start Registerf√∏rer Test</button>
            </a>
        </div>
    </div>

    <!-- Leaflet JavaScript for the map -->
    <script src="~/lib/leaflet/leaflet.js"></script>

    <script @Html.Raw(Html.NonceAttribute())>
        // Initialize the non-interactive background map
        document.addEventListener('DOMContentLoaded', function () {
            var map = L.map('landing-map', {
                center: [60.4720, 8.4689], // Center of Norway
                zoom: 5,
                zoomControl: false,
                dragging: false,
                touchZoom: false,
                scrollWheelZoom: false,
                doubleClickZoom: false,
                boxZoom: false,
                keyboard: false
            });

            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
            }).addTo(map);
        });
    </script>
</body>
</html>
