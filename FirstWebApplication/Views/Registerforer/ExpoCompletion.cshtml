@{
    ViewData["Title"] = "Test Complete";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Aviation Obstacle Registration</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Completion CSS -->
    <link rel="stylesheet" href="~/css/expo/completion.css" asp-append-version="true" />
</head>
<body>
    <div class="completion-container">
        <div class="completion-card">
            <!-- Success Icon -->
            <div class="completion-icon">✨</div>

            <!-- Title -->
            <h1 class="completion-title">Gratulerer!</h1>

            <!-- Summary -->
            <p class="completion-summary">
                Du har fullført alle 6 oppgavene i Registerfører-testen!
            </p>

            <!-- QR Code Section -->
            <div class="qr-section">
                <div class="qr-code-container">
                    <img src="~/images/expo/feedback-qr.png" alt="Feedback QR Code" class="qr-code-image" />
                </div>
                <p class="qr-text">Scan QR-koden for å gi feedback</p>
            </div>

            <!-- Buttons -->
            <div class="completion-buttons">
                <a href="@Url.Action("RegisterforerDashboard", "Registerforer")" class="completion-btn completion-btn-primary">
                    Tilbake til Dashboard
                </a>
                <button id="reset-btn" class="completion-btn completion-btn-secondary">
                    Start på nytt
                </button>
            </div>
        </div>
    </div>

    <script @Html.Raw(Html.NonceAttribute())>
        document.addEventListener('DOMContentLoaded', function () {
            var resetBtn = document.getElementById('reset-btn');

            if (resetBtn) {
                resetBtn.addEventListener('click', function () {
                    // Clear task progress
                    localStorage.removeItem('expoTaskProgress_registerforer');

                    // Redirect to role selection page
                    window.location.href = '@Url.Action("Index", "Home")';
                });
            }
        });
    </script>
</body>
</html>
